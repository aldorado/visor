# visor core env template
# copy to .env and fill required values

# required
TELEGRAM_BOT_TOKEN=
USER_PHONE_NUMBER=

# runtime
PORT=8080
AGENT_BACKEND=echo
# optional failover priority list (overrides AGENT_BACKEND ordering)
# AGENT_BACKENDS=pi,echo
TELEGRAM_WEBHOOK_SECRET=
DATA_DIR=data
TZ=Europe/Vienna

# ai + voice (optional)
OPENAI_API_KEY=
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
# pi runtime context controls
PI_CONTEXT_WINDOW_TOKENS=64000
PI_HANDOFF_THRESHOLD=0.60
# set true to force fresh session per prompt (usually slower)
PI_NO_SESSION=false

# email integration (optional)
HIMALAYA_ENABLED=false
HIMALAYA_ACCOUNT=default
HIMALAYA_POLL_INTERVAL_SECONDS=60
EMAIL_ALLOWED_SENDERS=

# logging + observability (optional)
LOG_LEVEL=info
LOG_VERBOSE=false
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=visor
OTEL_ENVIRONMENT=dev
OTEL_INSECURE=false

# self-evolution (optional)
SELF_EVOLUTION_ENABLED=false
SELF_EVOLUTION_REPO_DIR=.
SELF_EVOLUTION_PUSH=false
