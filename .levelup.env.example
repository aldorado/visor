# level-up environment variables (copy to .levelup.env)

# shared
TZ=Europe/Vienna

# proxy (base ingress level-up)
PROXY_DOMAIN=
PROXY_HTTP_PORT=80
PROXY_HTTPS_PORT=443
# optional DNS-01 fallback config for wildcard certificates (future)
DNS_PROVIDER=
DNS_API_TOKEN=

# himalaya (email level-up)
HIMALAYA_ENABLED=false
HIMALAYA_ACCOUNT=default
HIMALAYA_POLL_INTERVAL_SECONDS=60
HIMALAYA_IMAP_HOST=
HIMALAYA_IMAP_PORT=993
HIMALAYA_SMTP_HOST=
HIMALAYA_SMTP_PORT=465
HIMALAYA_EMAIL=
HIMALAYA_PASSWORD=
HIMALAYA_USE_TLS=true
# comma-separated sender allowlist (empty = all mail passes through)
EMAIL_ALLOWED_SENDERS=

# obsidian (standard level-up)
# host bind mounts so visor can read/write vault/config directly
OBSIDIAN_PUID=1000
OBSIDIAN_PGID=1000
OBSIDIAN_CUSTOM_USER=
OBSIDIAN_PASSWORD=
OBSIDIAN_TITLE=Visor Obsidian
OBSIDIAN_SUBFOLDER=/
OBSIDIAN_CONFIG_PATH=/root/code/visor/data/levelups/obsidian/config
OBSIDIAN_VAULT_PATH=/root/code/visor/data/levelups/obsidian/vault

# cloudflared (base connectivity level-up)
# create tunnel token in cloudflare zero trust and paste here
CLOUDFLARED_TUNNEL_TOKEN=
CLOUDFLARED_METRICS_PORT=20241

